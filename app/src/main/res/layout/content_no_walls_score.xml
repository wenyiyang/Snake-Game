<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/no_walls_score_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.wenyiyang.snake.NoWallsScore"
    tools:showIn="@layout/activity_no_walls_score">

    <TextView
        android:id="@+id/game_over_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/game_over_middle"
        android:text="@string/title_game_over_left"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/game_over_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/game_over_left"
        android:layout_alignBottom="@id/game_over_left"
        android:layout_centerHorizontal="true"
        android:text="@string/title_game_over_middle"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/game_over_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/game_over_middle"
        android:layout_alignBottom="@id/game_over_middle"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@id/game_over_middle"
        android:text="@string/title_game_over_right"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/player_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/goto_main_menu"
        android:layout_centerVertical="true"
        android:background="@mipmap/menu_options" />

    <ImageView
        android:id="@+id/goto_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_score"
        android:layout_toLeftOf="@+id/play_again"
        android:background="@mipmap/menu_options"/>

    <TextView
        android:id="@+id/high_score_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play_again"
        android:layout_alignLeft="@id/game_over_middle"
        android:layout_marginLeft="71dp"
        android:background="@mipmap/menu_options"/>

    <ImageView
        android:id="@+id/play_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/goto_main_menu"
        android:layout_alignRight="@id/high_score_mode"
        android:background="@mipmap/menu_options"/>

</RelativeLayout>
